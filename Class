#Empty Class
Class Employee:
  Pass

#Primitive Instantiation
emp_1 = Employee()
emp_1.name = 'name'
emp_1.last = 'last'


#Class with Functional Instantiation 
class Employee:

    def __init__(self, first, last, pay):               # self, refering to the Instance - For Example: self.fullname() = Employee.fullname(self)
        self.first = first
        self.last = last
        self.email = first + '.' + last + '@email.com'
        self.pay = pay

emp_2 = Employee('first2', 'last2', 60000)              # Same as Employee.__init__()
